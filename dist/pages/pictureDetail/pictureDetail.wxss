@keyframes up-float {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0);
  }
}

.pic-item {
  padding: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.user-info .avata-wrapper {
  width: 100rpx;
  height: 100rpx;
  margin-right: 15rpx;
  border-radius: 50%;
  overflow: hidden;
  flex: none;
}

.user-info .avata-wrapper .avatar {
  width: 100%;
  height: 100rpx;
  border-radius: 50%;
}

.user-info .nick-name {
  color: #212121;
}

.user-info .to-draw {
  justify-content: flex-end;
  display: flex;
  align-items: center;
  flex: 1;
  color: #9e9e9e;
}

.pic-container {
  max-width: 100%;
  height: auto;
  background-color: #fff;
  border-bottom: 1px solid #e2e6e6;
}

.pic-container .pic {
  max-width: 100%;
  height: 100vw;
}

.likes {
  padding: 20rpx 0;
  overflow: auto;
}

.likes .icon-btn {
  padding: 0 20rpx;
  height: 50rpx;
  margin: 10rpx;
  display: flex;
  align-items: center;
  float: left;
  border: none;
  background-color: transparent;
  color: #b3b3b3;
}

.likes .icon-btn.active {
  color: #ff9800;
}

.likes .icon-btn .fa-thumbs-up {
  margin-right: 10rpx;
}

.likes .likes-img-wrapper .like-image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 10rpx;
}

.comments .send-comment {
  display: flex;
  padding-bottom: 20rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}

.comments .send-comment .input {
  flex: .9;
  background-color: #f7f7f7;
  border-radius: 6rpx;
  padding: 10rpx;
}

.comments .send-comment .icon-btn {
  flex: none;
  margin: 0;
  font-size: 26rpx;
}

.comments .comments-wrapper {
  margin-bottom: 30rpx;
}

.comments .comments-wrapper .comment {
  background-color: #f2f2f2;
  padding: 10rpx;
  margin-bottom: 10rpx;
}

.comments .comments-wrapper .comment .user-info {
  display: flex;
  align-items: center;
  padding: 10rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #e6e6e6;
}

.comments .comments-wrapper .comment .user-info .comment-avatar {
  padding: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.comments .comments-wrapper .comment .comment-content {
  font-size: 26rpx;
}