<view>
  <view class="container">
    <view wx:for="{{pics}}" wx:key="{{item._id}}" class="picture-wrapper">
        <component-pic-item picItem="{{item}}" />
    </view>
    <view class="nomore-pic" wx:if="{{noPic}}">无更多</view>
  </view>
  <view wx:if="{{loading}}" class="loading">
    <view style="animation-delay:{{item/5}}s" class="loading-dot" wx:for="{{[0,1,2,3]}}" wx:key="{{index}}"></view>
  </view>
</view>