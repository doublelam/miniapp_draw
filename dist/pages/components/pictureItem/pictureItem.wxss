@keyframes up-float {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0);
  }
}

.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.user-info .avata-wrapper {
  width: 100rpx;
  height: 100rpx;
  margin-right: 15rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-info .avata-wrapper .avatar {
  width: 100%;
  height: 100rpx;
  border-radius: 50%;
}

.user-info .nick-name {
  color: #212121;
}

.pic-container {
  width: 60vw;
  height: 60vw;
  background-color: #fff;
}

.pic-container .pic-item {
  width: 60vw;
  height: 60vw;
}

.likes {
  padding: 20rpx 0;
  overflow: auto;
}

.likes .icon-btn {
  padding: 0 20rpx;
  height: 50rpx;
  margin: 10rpx;
  display: flex;
  align-items: center;
  float: left;
  border: none;
  background-color: transparent;
  color: #b3b3b3;
}

.likes .icon-btn.active {
  color: #ff9800;
}

.likes .icon-btn .fa-thumbs-up {
  margin-right: 10rpx;
}

.likes .likes-img-wrapper .like-image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 10rpx;
}